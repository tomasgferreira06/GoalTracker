<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane fx:id="pane" style="-fx-background-color: #f0f0f0;" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gps_g12.goalTracker.controller.MyTasksController">
    <children>
        <!-- Título -->
        <Text fx:id="titleText" layoutX="14.0" layoutY="58.0" text="MY TASKS" style="-fx-font-size: 37px; -fx-font-weight: bold; -fx-fill: #333;"/>

        <!-- Botão Adicionar Tarefa -->
        <Button fx:id="addButton" layoutX="436.0" layoutY="320.0" prefHeight="65.0" prefWidth="150.0" onAction="#onAddTaskClick" text="ADD TASK" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;"/>

        <!-- Abas -->
        <TabPane fx:id="tabPane" layoutX="14.0" layoutY="77.0" prefHeight="308.0" prefWidth="413.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Today" style="-fx-cursor: hand;">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="taskListView" prefHeight="278.0" prefWidth="413.0" />
                                <ScrollBar layoutX="398.0" layoutY="1.0" orientation="VERTICAL" prefHeight="276.0" prefWidth="14.0" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Tomorrow" style="-fx-cursor: hand;">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="tomorrowListView" prefHeight="278.0" prefWidth="413.0" />
                                <ScrollBar layoutX="398.0" layoutY="1.0" orientation="VERTICAL" prefHeight="276.0" prefWidth="14.0" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="No Spec. Date" style="-fx-cursor: hand;">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="noDateListView" prefHeight="278.0" prefWidth="413.0" />
                                <ScrollBar layoutX="398.0" layoutY="1.0" orientation="VERTICAL" prefHeight="276.0" prefWidth="14.0" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Completed" style="-fx-cursor: hand;">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="completedListView" prefHeight="278.0" prefWidth="413.0" />
                                <Button fx:id="undoButton" layoutX="536.0" layoutY="320.0" mnemonicParsing="false" prefHeight="65.0" prefWidth="150.0" style="-fx-cursor: hand;" text="Undo">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Button>
                                <ScrollBar layoutX="398.0" layoutY="1.0" orientation="VERTICAL" prefHeight="276.0" prefWidth="14.0" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>

        <!-- Botão de Ordenação -->
        <ToggleButton fx:id="orderByPriority" layoutX="436.0" layoutY="77.0" prefHeight="25.0" prefWidth="150.0" text="Order by Priority" style="-fx-background-color: #337ab7; -fx-cursor: hand; -fx-text-fill: white; -fx-font-size: 12px;"/>

        <!-- Botão Perfil -->
        <Button fx:id="profileButton" layoutX="550.0" layoutY="10.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 25; -fx-cursor: hand; -fx-background-color: #337ab7; -fx-text-fill: white; -fx-font-size: 16px;" text="P" onAction="#openProfile"/>
    </children>
</Pane>
